<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:paddingTop="2dp"
        android:text="@string/day1_date"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:textStyle="bold|italic" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time1"
                android:paddingRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day1_activitytime1"
                android:textColor="#00a6e3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/des1"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/day1_activitylabel1"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day1_activitytime2"
                android:textColor="#00a6e3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/des2"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/day1_activitylabel2"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:width="0dip" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day1_activitytime3"
                android:textColor="#00a6e3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/des3"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:text="@string/day1_activitylabel3"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:width="0dip" />
        </TableRow>
        
        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/day1_activitytime4"
                android:textColor="#00a6e3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/des4"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:text="@string/day1_activitylabel4"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:width="0dip" />
        </TableRow>
    </TableLayout>

</RelativeLayout>