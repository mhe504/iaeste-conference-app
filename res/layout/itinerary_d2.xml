<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="2dp"
        android:gravity="center"
        android:text="Saturday 19 January"
        android:textColor="#FFFFFF"
        android:textSize="21sp"
        android:textStyle="bold|italic" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/subtitle"
        android:layout_marginTop="18dp" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="08.45 – 10.15"
                android:textColor="#00a6e3"
                android:paddingRight="10dp"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/des1"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:width="0dp"
                android:text="Introductory Administration Seminar"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.15 – 10:30"
                android:textColor="#00a6e3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/des2"
                 android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Coffee Break"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10.30 – 12.00"
                android:textColor="#00a6e3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/des3"
                 android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Opening Ceremony (Smart attire)"
                android:textColor="#FFFFFF"
                android:width="0dp"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.15 – 13.30"
                android:textColor="#00a6e3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/des4"
                 android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Lunch"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow5"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="13.30 – 18.00"
                android:textColor="#00a6e3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/des5"
                 android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Exchange Session 1"
                android:textColor="#FFFFFF"
                android:width="0dp"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow6"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/time6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="19.30"
                android:textColor="#00a6e3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/des6"
                android:width="0dp"
                 android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Dinner – Titanic Belfast (Smart)"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </TableRow>
    </TableLayout>

</RelativeLayout>